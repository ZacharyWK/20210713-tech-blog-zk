<div class="text-center">
  <h2>{{name}}</h2>
   <p>{{description}}</p>
  <p>Created by {{name}} on {{format_date date_created}}</p>
</div>

<div class="comment">
  <h2>Comments</h2>
  <form>
    <input class="form-input" type="text">
    <button type="submit" class="btn btn-primary" id="comment-btn">Comment</button>
  </form>
  {{#if Comment}}{{#each Comment}}
  <p>{{name}} Said: {{Comment.body}}</p>

  {{/each}}{{/if}}
</div>