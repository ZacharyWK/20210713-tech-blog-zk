<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{post_body}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>

<div class="comment">
  <h2>Comments</h2>
  <form>
    <input class="form-input" type="text">
    <button type="submit" class="btn btn-primary" id="comment-btn">Comment</button>
  </form>
  {{#if Comment}}{{#each Comment}}
  <p>{{name}} Said: {{Comment.comment_body}} on: {{format_date date_created}}</p>

  {{/each}}{{/if}}
</div>

  {{#if blogposts.length}}
  <div class="col-md-6 blogPost-list">
    <h3>Previous Posts:</h3>

    {{#each blogposts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>